{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "APP_ENV",
    "APP_DEBUG",
    "TTS_LANGUAGE_CODE",
    "TTS_VOICE_NAME",
    "TTS_SPEAKING_RATE",
    "TTS_PITCH",
    "STORAGE_BUCKET_NAME",
    "GCP_PROJECT_ID"
  ],
  "properties": {
    "APP_ENV": {
      "type": "string",
      "enum": ["development", "production", "test"],
      "description": "Application environment"
    },
    "APP_DEBUG": {
      "type": "boolean",
      "description": "Debug mode flag"
    },
    "TTS_LANGUAGE_CODE": {
      "type": "string",
      "pattern": "^[a-z]{2}-[A-Z]{2}$",
      "default": "en-US",
      "description": "Language code for text-to-speech"
    },
    "TTS_VOICE_NAME": {
      "type": "string",
      "pattern": "^[a-z]{2}-[A-Z]{2}-[A-Za-z0-9]+-[A-Z]$",
      "default": "en-US-Wavenet-D",
      "description": "Voice name for text-to-speech"
    },
    "TTS_SPEAKING_RATE": {
      "type": "number",
      "minimum": 0.25,
      "maximum": 4.0,
      "default": 1.0,
      "description": "Speaking rate (1.0 is normal speed)"
    },
    "TTS_PITCH": {
      "type": "number",
      "minimum": -20.0,
      "maximum": 20.0,
      "default": 0.0,
      "description": "Voice pitch in semitones"
    },
    "STORAGE_BUCKET_NAME": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]{1,61}[a-z0-9]$",
      "description": "Google Cloud Storage bucket name"
    },
    "GCP_PROJECT_ID": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]{4,28}[a-z0-9]$",
      "description": "Google Cloud project ID"
    },
    "GOOGLE_APPLICATION_CREDENTIALS": {
      "type": "string",
      "description": "Path to Google Cloud credentials JSON file"
    }
  }
}