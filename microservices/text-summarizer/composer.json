{
    "name": "h13/text-summarizer-bear",
    "description": "Text Summarizer service with BEAR.Sunday",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "bear/package": "^1.13",
        "bear/sunday": "^1.7",
        "google/cloud-storage": "^1.39",
        "openai-php/client": "^0.8",
        "monolog/monolog": "^3.5",
        "koriym/env-json": "^0.1.0"
    },
    "require-dev": {
        "bear/devtools": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.40",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "TextSummarizer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TextSummarizer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": ["@setup"],
        "post-update-cmd": ["@setup"],
        "setup": ["php bin/setup.php"],
        "test": ["vendor/bin/phpunit"],
        "cs": ["vendor/bin/php-cs-fixer fix -v --dry-run"],
        "cs-fix": ["vendor/bin/php-cs-fixer fix -v"],
        "sa": ["vendor/bin/phpstan analyse"],
        "psalm": ["vendor/bin/psalm"],
        "qa": ["@cs", "@sa", "@psalm", "@test"]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "bear/devtools": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
