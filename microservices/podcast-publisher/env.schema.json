{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "APP_ENV",
    "APP_DEBUG",
    "STORAGE_BUCKET_NAME",
    "PODCAST_BUCKET_NAME",
    "GCP_PROJECT_ID",
    "PODCAST_TITLE",
    "PODCAST_DESCRIPTION",
    "PODCAST_AUTHOR",
    "PODCAST_EMAIL",
    "PODCAST_CATEGORY",
    "PODCAST_LANGUAGE",
    "PODCAST_IMAGE_URL",
    "PODCAST_WEBSITE_URL"
  ],
  "properties": {
    "APP_ENV": {
      "type": "string",
      "enum": ["development", "production", "test"],
      "description": "Application environment"
    },
    "APP_DEBUG": {
      "type": "boolean",
      "description": "Debug mode flag"
    },
    "STORAGE_BUCKET_NAME": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]{1,61}[a-z0-9]$",
      "description": "Google Cloud Storage bucket name for audio files"
    },
    "PODCAST_BUCKET_NAME": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]{1,61}[a-z0-9]$",
      "description": "Public bucket for podcast feed"
    },
    "GCP_PROJECT_ID": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]{4,28}[a-z0-9]$",
      "description": "Google Cloud project ID"
    },
    "GOOGLE_APPLICATION_CREDENTIALS": {
      "type": "string",
      "description": "Path to Google Cloud credentials JSON file"
    },
    "PODCAST_TITLE": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Podcast title"
    },
    "PODCAST_DESCRIPTION": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4000,
      "description": "Podcast description"
    },
    "PODCAST_AUTHOR": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Podcast author name"
    },
    "PODCAST_EMAIL": {
      "type": "string",
      "format": "email",
      "description": "Contact email for podcast"
    },
    "PODCAST_CATEGORY": {
      "type": "string",
      "enum": [
        "Arts",
        "Business",
        "Comedy",
        "Education",
        "Fiction",
        "Government",
        "Health & Fitness",
        "History",
        "Kids & Family",
        "Leisure",
        "Music",
        "News",
        "Religion & Spirituality",
        "Science",
        "Society & Culture",
        "Sports",
        "Technology",
        "True Crime",
        "TV & Film"
      ],
      "description": "iTunes podcast category"
    },
    "PODCAST_LANGUAGE": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
      "default": "en",
      "description": "Podcast language code"
    },
    "PODCAST_IMAGE_URL": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://.*\\.(jpg|jpeg|png)$",
      "description": "Podcast cover image URL (min 1400x1400px)"
    },
    "PODCAST_WEBSITE_URL": {
      "type": "string",
      "format": "uri",
      "description": "Podcast website URL"
    }
  }
}