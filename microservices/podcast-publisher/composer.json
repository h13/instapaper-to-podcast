{
    "name": "instapaper-to-podcast/podcast-publisher",
    "description": "Podcast publisher microservice using BEAR.Sunday",
    "type": "project",
    "require": {
        "php": "^8.3",
        "bear/package": "^1.13",
        "bear/resource": "^1.18",
        "google/cloud-storage": "^1.35",
        "symfony/console": "^6.4",
        "monolog/monolog": "^3.5",
        "laminas/laminas-feed": "^2.22",
        "koriym/env-json": "^0.1.0"
    },
    "require-dev": {
        "bear/devtools": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.40",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "PodcastPublisher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PodcastPublisher\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": ["@setup"],
        "post-update-cmd": ["@setup"],
        "setup": ["php bin/setup.php"],
        "test": ["vendor/bin/phpunit"],
        "cs": ["vendor/bin/php-cs-fixer fix -v --dry-run"],
        "cs-fix": ["vendor/bin/php-cs-fixer fix -v"],
        "sa": ["vendor/bin/phpstan analyse"],
        "psalm": ["vendor/bin/psalm"],
        "qa": ["@cs", "@sa", "@psalm", "@test"]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
